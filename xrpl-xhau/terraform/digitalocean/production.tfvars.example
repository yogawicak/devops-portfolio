# Production environment configuration for DigitalOcean
# Copy this file to production.tfvars and customize

project_name = "xrpl-validator"
environment  = "testnet"
do_region    = "nyc3"

# DigitalOcean API Token (set via environment variable or here)
# do_token = "dop_v1_xxx..."

# Network Configuration
vpc_cidr = "10.10.0.0/16"

# Droplet Sizes
# Memory-optimized droplets for validators:
# m-2vcpu-16gb: 2 vCPU, 16 GB RAM
# m-4vcpu-32gb: 4 vCPU, 32 GB RAM (recommended)
# m-8vcpu-64gb: 8 vCPU, 64 GB RAM
validator_size  = "m-4vcpu-32gb"
monitoring_size = "s-2vcpu-4gb"

# SSH Access
# Set a strong root password for SSH access
root_password = "YourStrongPasswordHere123!"

# Restrict SSH access to your IP only
allowed_ssh_cidrs = ["YOUR_IP/32"]

# XRPL Configuration
network_type    = "testnet"
validator_count = 1
unl_url         = "https://vl.xrplf.org"

# Monitoring
enable_monitoring      = true
grafana_admin_password = "changeme-use-strong-password!"
alert_email            = "alerts@yourdomain.com"

# Additional Tags
additional_tags = ["devops", "xrpl"]
